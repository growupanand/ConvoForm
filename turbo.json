{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [
    ".env",
    ".env.local"
  ],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_GOOGLE_ANALYTICS",
    "NEXT_PUBLIC_APP_URL",
    "VERCEL_URL",
    "OPEN_AI_MODEL",
    "OPENAI_API_KEY"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "type-check": {
      "dependsOn": [
        "^type-check"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    }
  }
}