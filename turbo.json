{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_GOOGLE_ANALYTICS",
    "NEXT_PUBLIC_APP_URL",
    "VERCEL_URL",
    "OPEN_AI_MODEL",
    "OPENAI_API_KEY",
    "DATABASE_URL",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "SHOW_NO_RATE_LIMIT_LOG",
    "NEXT_PUBLIC_WEBSOCKET_URL",
    "NEXT_PUBLIC_PACKAGE_ENV",
    "CLERK_SECRET_KEY"
  ],
  "globalDependencies": [
    ".env",
    ".env.local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "start": {
      "dependsOn": [
        "^start"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "type-check": {
      "dependsOn": [
        "^type-check"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "ui" : "tui"
}
