{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_APP_URL",
    "VERCEL_URL",
    "OPEN_AI_MODEL",
    "OPENAI_API_KEY",
    "DATABASE_URL",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "SHOW_NO_RATE_LIMIT_LOG",
    "NEXT_PUBLIC_WEBSOCKET_URL",
    "NEXT_PUBLIC_PACKAGE_ENV",
    "CLERK_SECRET_KEY",
    "REDIS_URL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_REDIRECT_URI",
    "GOOGLE_CLIENT_SECRET"
  ],
  "globalDependencies": [
    ".env"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "start": {
      "dependsOn": [
        "^start"
      ],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "type-check": {
      "dependsOn": [
        "^type-check"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:turbo": {
      "cache": false,
      "persistent": true
    },
    "prepare:release" : {
      "dependsOn": ["^prepare:release"],
      "cache": false
    }
  },
  "ui" : "tui"
}
