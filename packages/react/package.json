{
  "name": "@convoform/react",
  "description": "React hook for creating conversational forms with ConvoForm.",
  "homepage": "https://www.convoform.com",
  "private": false,
  "version": "0.2.3",
  "license": "MIT",
  "author": {
    "name": "Utkarsh Anand",
    "email": "growupanand@gmail.com"
  },
  "keywords": [
    "convoform",
    "conversational form",
    "react hook",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/growupanand/ConvoForm.git",
    "directory": "packages/react"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@convoform/common": "../common",
    "@convoform/db": "../db",
    "@convoform/tsconfig": "../tsconfig",
    "@convoform/websocket-client": "../websocket-client",
    "@types/react": "19.0.8",
    "tsup": "^8.0.2",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/growupanand"
  }
}