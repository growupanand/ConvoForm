{
  "name": "@convoform/react",
  "description": "React hook for creating conversational forms with ConvoForm.",
  "homepage": "https://www.convoform.com",
  "private": false,
  "version": "0.0.4",
  "license": "MIT",
  "author": {
    "name": "Utkarsh Anand",
    "email": "growupanand@gmail.com"
  },
  "keywords": [
    "convoform",
    "conversational form",
    "react hook",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/growupanand/ConvoForm.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm run clean && tsup src/index.ts --format cjs --dts",
    "dev": "pnpm run build --watch",
    "release": "release-it"
  },
  "dependencies": {
    "@convoform/websocket-client": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18",
    "tsup": "^8.0.2",
    "typescript": "^5",
    "release-it": "^17.0.1",
    "@release-it/conventional-changelog": "^8.0.1"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  }
}
