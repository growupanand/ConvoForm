{
  "name": "@convoform/react",
  "description": "React hook for creating conversational forms with ConvoForm.",
  "homepage": "https://www.convoform.com",
  "private": false,
  "version": "0.4.0",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Utkarsh Anand",
    "email": "growupanand@gmail.com"
  },
  "keywords": [
    "convoform",
    "conversational form",
    "react hook",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/growupanand/ConvoForm.git",
    "directory": "packages/react"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "dev:turbo": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@convoform/logger": "../logger",
    "@convoform/tsconfig": "../tsconfig",
    "@convoform/websocket-client": "../websocket-client",
    "@types/react": "catalog:",
    "tsup": "^8.0.2",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:",
    "react-dom": "catalog:",
    "@ai-sdk/react": "catalog:",
    "ai": "catalog:"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/growupanand"
  }
}